<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:HandyScreenshot.Controls">
    <Style TargetType="{x:Type local:ScreenshotToolbar}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ScreenshotToolbar}">
                    <Canvas>
                        <Border x:Name="PART_Toolbar"
                                Width="100"
                                Height="30"
                                Background="LightGray"
                                BorderThickness="1"
                                BorderBrush="#2080f0">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0"
                                                  Color="DarkGray" />
                            </Border.Effect>
                        </Border>
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>